	<div id="content">

		<div class="contentblock_wide">
			<h1 style="color: #7dad2c;">Panel administracyjny</h1>		
			<a href="/admin_logout"><button type="button" class="button_submit_red">Wyloguj</button></a>
			<% if(success != '') { %>
				<h3 style="color: #3dc407"><%= success %></h3>
				<p>Opłać wynajem</p>
				<% if(id_wypozyczenia != 0) { %>
					<form method="post" action="/oplac_wynajem">
						<select class="inputbox" style="width: 120px;" name="metoda">
							<option value="karta">Karta/BLIK</option>
							<option value="gotówka">Gotówka</option>
							<option value="voucher">Voucher</option>
						</select>
						<input type="hidden" name="id_wypozyczenia" value="<%= id_wypozyczenia %>">
						<button class="button_submit_orange">Opłać</button>
					</form>
				<% } %>
			<% } %>
			
		</div>
	
	<div id="admincontainter">
			
			
		<div class="adminblock">
			
			<div class="admintitle">
				
				Anulowanie rezerwacji
				
			</div>
			
			<div class="admincontent">
				<form method="post" action="/anuluj_rezerwacje">
					<p style="color: #d43232"><b>UWAGA!</b> Poinformuj klienta, że ta akcja jest nieodwracalna!</p>
					<p>Numer rezerwacji</p>
					<input type="number" class="inputbox" name="id_wypozyczenia" required>
					<button type="submit" class="button_submit" style="background-color: #c90606;">Anuluj rezerwację</button>
				</form>
			</div>
			
		</div>
		
		<div class="adminblock">
			
			<div class="admintitle">
				
				Rozpoczęcie wynajmu
				
			</div>
			
			<div class="admincontent">
				<form method="post" action="/rozpoczecie_wynajmu">
					<p>Numer rezerwacji</p>
					<input type="number" class="inputbox" name="id_wypozyczenia" required>
					<button type="submit" class="button_submit">Rozpocznij wynajem</button>
				</form>
			</div>
			
		</div>
		
		
		<div class="adminblock">
			
			<div class="admintitle">
				
				Zakończenie wynajmu
				
			</div>
			
			<div class="admincontent">
				<form method="post" action="/zakonczenie_wynajmu">
					<p>Przed płatnością <b>zakończ wynajem!</b> Ostateczna kwota na tej podstawie zostanie wyliczona!</p>
					<p>Numer rezerwacji</p>
					<input type="number" class="inputbox" name="id_wypozyczenia" required>
					<button type="submit" class="button_submit">Zakończ wynajem</button>
				</form>
			</div>
			
