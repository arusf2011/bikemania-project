	</div>
	
	
	
	
	<div id="content">
		
		<div class="adminblock">
			
			<div class="admintitle">
				
				Edycja roweru
				
			</div>			

			<div class="admincontent">
				<form method="post" action="/edytuj_rower">
					<input type="hidden" name="id_roweru" value="<%= rower[0] %>">
					<p>Model</p>
					<input type="text" class="inputbox" name="model" required value="<%= rower[1] %>">
					<p>Typ roweru</p>
					<input type="text" class="inputbox" name="typ_roweru" required value="<%= rower[2] %>">
					<p>Magazyn</p>
					<select class="inputbox" name="id_magazynu" required>
						<% magazyny.forEach((magazyn) => { %>
							<option value="<%= magazyn[0] %>" <% if(magazyn[0] == rower[3]) { %>selected<% } %>><%= magazyn[1] %></option>
						<% }) %>
                    </select>
					<button type="submit" class="button_submit">Edytuj</button>
				</form>
			</div>
			
		</div>

		
